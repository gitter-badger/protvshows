@model IEnumerable<protvshows.Models.TVshow>

<div class="container" style="margin-top:30px;">

	<h3>Все сериалы</h3>
    <hr style="margin-bottom:20px;"/>

	<div style="margin-bottom:30px;">
        <input type="button" value="Добавить новый" class="btn btn-default btn-lg" onclick="location.href='@Url.Action("Add", "Admin")'" />
    </div>
	
@if (Model.Count() == 0)
{
    <p>Запрос вернул пустой результат. Проверьте базу данных.</p>
}
else
{
    <table class="table">
      <tr>
		<th>ID</th>
        <th>Название</th>
        <th style="text-align:center;">Добавлен</th>
        <th style="text-align:center;">Пользователь</th>
        <th style="text-align:center;">Ссылка</th>
      </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ID)</td>
            <td>@Html.DisplayFor(modelItem => item.Title)</td>
            <td style="text-align:center;">@Html.DisplayFor(modelItem => item.Added_on_date)</td>
            <td style="text-align:center;">@Html.DisplayFor(modelItem => item.Added_by_username)</td>
            <td style="text-align:center;"><a asp-area="" asp-controller="tvshows" asp-action="GetTVshow" asp-route-short_name="@item.Short_name">open</a></td>
        </tr>
        }
    </table>
}
	
</div>