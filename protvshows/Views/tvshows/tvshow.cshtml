@model protvshows.Models.tvshow

@if (Model == null)
{
	<div class="container" style="width:65%; margin-top:50px;">
        <p>Запрос вернул пустой результат. Возможно, в базе данных нет такого сериала.</p>
	</div>
}
else
{
<div class="container" style="width:65%; margin-top:50px;">
    <div class="row">
		<div class="col-md-6">
	        <img class="rating" style="max-width:100%; height:auto;" src="@Model.picture_path_main"/>
	    </div>
	    <div class="col-md-6">
		    <h1 style="margin-top:0px; margin-bottom:50px;"><b>@Html.DisplayFor(modelItem => Model.title)</b></h1>
            <div class="row row-show-description">
			    <div class="col-md-3"><b>Жанр:</b></div>
				<div class="col-md-9">@Html.DisplayFor(modelItem => Model.genre)</div>
			</div>
			<div class="row row-show-description">
                <div class="col-md-3"><b>Инфо:</b></div>
                <div class="col-md-9">@Html.DisplayFor(modelItem => Model.info)</div>
            </div>
            <div class="row row-show-description">
                <div class="col-md-3"><b>Аналоги:</b></div>
                <div class="col-md-9">[в процессе]</div>
            </div>
			<div class="row row-show-description">
                <div class="col-md-12" style="margin-top:30px;">
                    <a target="_blank" class="transparent-btn-black" href="@Model.link_trailer">Смотреть трейлер</a>
                </div>
            </div>
	    </div>
	</div>
</div> 

<div class="container cutter" style="margin-top: 50px; margin-bottom: 50px;">
    <div class="container" style="width:60%">
	    <p style="line-height: 1.6em; margin:0;">@Html.DisplayFor(modelItem => Model.description)</p>
	</div>
</div>

<div class="container" style="width:65%; padding-bottom:50px;">
    <div class="row">
        <div class="col-md-6">
            <img class="rating" style="max-width:100%; height:auto;" src="@Model.picture_path_detailed"/>
        </div>
        <div class="col-md-6">
            <div class="row row-show-description">
                <div class="col-md-3"><b>Вердикт:</b></div>
                <div class="col-md-9">@Html.DisplayFor(modelItem => Model.verdict)</div>
            </div>
			<div class="row row-show-description">
                <div class="col-md-3"><b>Рейтинг:</b></div>
                <div class="col-md-9">
                    <p>мужчины – @Model.rating_boy</p>
					<p>женщины – @Model.rating_girl</p>               
				    <p>эксперты – @Model.rating_expert</p>
				    <p><a target="_blank" href="http://www.imdb.com/title/@Model.imdb_link_id/" title="Рейтинг по состоянию на @Model.rating_imdb_date">IMDB – @Model.rating_imdb</a></p>
				</div>
            </div>
			<div class="row row-show-description">
                <div class="col-md-12" style="margin-top:30px;">
                    <a target="_blank" class="transparent-btn-black" href="/404">Подобрать мне сериал</a>
                </div>
            </div>
            <div class="row row-show-description">
				<div class="col-md-12" style="font-size:80%; margin-top:30px;">
                    <p>
						Не согласен с мнением наших экспертов?<br/>
						Почитай <a href="/Home/About">как мы составляем рейтинг</a>.
					</p>
			        <p>
						Есть, что добавить или хочется подискутировать?<br/>
						Обсуди на странице этого сериала <a target="_blank" href="@Model.link_discussion">в Instagram</a>.
					</p>
				</div>
			</div>
        </div>
    </div>
</div>
}