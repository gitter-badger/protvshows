@model IEnumerable<protvshows.Models.TVshow>

<div style="background-color:#fafafa; color: #000000;">
    <div class="cutter" style="width:50%;" align="center">
        <p style="font-size:200%; margin-bottom:30px;"><b>НАШ РЕЙТИНГ СЕРИАЛОВ НЕВЕРОЯТНО ПРЕДВЗЯТ, НЕОБЪЕКТИВЕН И СПОРЕН</b></p>
        <p style="font-size:150%; margin-bottom:30px;">Наши эксперты уже всё выбрали за вас</p>
        <a href="/Home/About" class="transparent-btn-white">КАК МЫ СОСТАВЛЯЕМ РЕЙТИНГ</a>
    </div>
</div>
<hr class="hr-main"/>
<hr class="hr-main"/>
<hr class="hr-main"/>

<div class="container" style="margin-top:30px; width:90%;">

@if (Model.Count() == 0)
{
    <p>Запрос вернул пустой результат. Проверьте базу данных.</p>
}
else
{
	int items = Model.Count();
	for (int i = 0; i < items; i++)
	{
    	if (i % 3 == 0)
        {
            @:<div class="row">
        }
		
	    <div class="col-md-3" style="padding:10px;">
            <a asp-area="" asp-controller="tvshows" asp-action="GetTVshow" asp-route-short_name="@Model.ElementAt(i).Short_name">
                <img style="max-width:100%; height:auto;" src="@Model.ElementAt(i).Picture_path_main"/>
            </a>
        </div>

		if (i % 3 == 2 || i == items - 1)
    	{
	        @:</div>
    	}
	}
}
</div>